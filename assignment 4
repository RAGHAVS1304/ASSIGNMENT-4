  # Python program to print Even Numbers in a List
 
# list of numbers
list1 = [-10, 21,-4,-45,-66, 93,7,12,90,-5]
 
# iterating each number in list
for num in list1:
 
    # checking condition
    if num % 2 == 0:
        print(num, end=" ")
        
 #e.
 # Python code to count the number of occurrences
def countX(lst, x):
    count = 0
    for ele in lst:
        if (ele == x):
            count = count + 1
    return count
 
 
# Driver Code
lst = [-10,21,-4,-45,-66,93,7,12,90,-5]
x = 7
print('{} has occurred {} times'.format(x,
                                        countX(lst, x)))
    
    
#ANSWER 9
# Python code to count the number of occurrences
def countX(lst, x):
    return lst.count(x)
 
 
# Driver Code
lst = [8, 6, 8, 10, 8, 20, 10, 8, 8]
x = 8
print('{} has occurred {} times'.format(x,
                                        countX(lst, x)))
 
            
            
        
        
